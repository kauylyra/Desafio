@model IEnumerable<Kauy.Projeto.Web.Models.ClienteViewModel>

@{
    ViewBag.Title = "Clientes";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<div class="col-md-12" style="margin-bottom: 20px">
    @using (Html.BeginForm("Index", "Cliente", FormMethod.Get))
    {
        <div id="custom-search-input">
            <div class="input-group col-md-12">
                @Html.TextBox("cpfcnpj", null, new { @class = "form-control input espaco-direita", @placeholder = "Pesquisar por cpfcnpj" })

                @Html.TextBox("nome", null, new { @class = "form-control input ", @placeholder = "Pesquisar por nome" })
                <span class="input-group-btn">
                    <button class="btn btn-info btn" type="submit">
                        <small><i class="glyphicon glyphicon-search"></i></small>
                    </button>
                </span>
            </div>
        </div>
    }
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPFCNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DDD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCriacao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.IdCliente)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    @{
        if (item.Tipo == 0)
        {
            <td>CPF</td>
        }
        else
        {
            <td> CNPJ </td>
        }
    }
    <td>
        @Html.DisplayFor(modelItem => item.CPFCNPJ)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DDD)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Fone)
    </td>
    <td>
        @item.DataCriacao.ToString("dd/MM/yyyy HH:mm")
    </td>
    <td>
        <a href="@Url.Action("Edit", "Cliente", new {id = item.IdCliente})" class="btn btn-warning">
            <span title="Editar" class="glyphicon glyphicon-pencil"></span>
        </a>
        <a href="@Url.Action("Details", "Cliente", new {id = item.IdCliente})" class="btn btn-primary">
            <span title="Detalhes" class="glyphicon glyphicon-search"></span>
        </a>


        <a href="@Url.Action("Delete", "Cliente", new {id = item.IdCliente})" class="btn btn-danger">
            <span title="Excluir" class="glyphicon glyphicon-trash"></span>
        </a>

    </td>
</tr>
    }

</table>
